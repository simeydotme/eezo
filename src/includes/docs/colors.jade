
extends ./layout/columns




mixin table-row( bg, hex )

    tr
        td.pad-v5.pad-h10= bg
        td.pad-v5.pad-h10= hex
        td.pad-v5.pad-h10( class="bg-" + bg )

mixin txtcolor( fg, bg )

    div.mb-12.tb-3.col.end.pad-v20( class = "bg-" + bg + " " + fg )
        span.disp-b .#{fg}

mixin bgcolor( bg, fg )

    div.mb-12.tb-3.col.end.pad-v30( class = "bg-" + bg + " " + fg )
        span.disp-b .bg-#{bg}

mixin borcolor( color )

    div.mb-12.tb-3.col.end.pad-5
        span.disp-b.mar-5.pad-v15.bor-1( class = "bor-" + color ) .bor-#{color}

mixin svgcolor( color )

    div.mb-4.tb-2.col.end.pad-0.mar-v10.pos-r( style = "height: 100px;" )
        div.pos-a.b0( style = "width: 100px; height: 90px;" class = "fill-" + color )
            block







